<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/ten">

    <RelativeLayout
        android:id="@+id/relativeLayoutA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">


        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/seventeen"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="Dialog title"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorB"
            android:layout_below="@+id/txtTitle"
            android:layout_marginTop="5dp"/>


        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fifteen"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:gravity="center"
            android:hint="Dialog message"
            android:layout_below="@+id/view"
            android:layout_marginTop="20dp"/>


        <LinearLayout
            android:id="@+id/linearLayoutA"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtMessage"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <Button
                android:id="@+id/bCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Create company"
                android:background="@drawable/style_box_button"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/bDone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Become employee"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:background="@drawable/style_box_button"
                android:textSize="@dimen/fifteen"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"/>


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>