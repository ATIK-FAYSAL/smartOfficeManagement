<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProPic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_user"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProPic"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/txtEmpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:hint="Employee name"
                android:padding="2dp"
                android:gravity="start"
                android:textColor="@color/colorC"
                android:textSize="@dimen/fifteen" />

            <TextView
                android:id="@+id/txtEmpId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorB"
                android:hint="Employee id"
                android:gravity="start"
                android:textSize="@dimen/thirteen"
                android:layout_below="@+id/txtEmpName"
                android:layout_marginEnd="20dp"
                android:padding="2dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="User phone number"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen"
                tools:text="+8801835897172"
                android:layout_marginStart="5dp"
                android:gravity="start"
                android:layout_below="@+id/txtEmpId"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="User email"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/txtPhone"
                tools:text="atikfaysal@gmail.com"
                android:padding="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmail"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:clipToPadding="true"
                android:visibility="gone"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_input_text"
                    android:text="Message"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"/>

                <TextView
                    android:id="@+id/txtAttendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_input_text"
                    android:text="Attendance"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"/>


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>